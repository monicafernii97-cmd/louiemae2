{
  "rewrites": [
    {
      "source": "/story",
      "destination": "/api/og?path=story"
    },
    {
      "source": "/blog",
      "destination": "/api/og?path=blog"
    },
    {
      "source": "/shop",
      "destination": "/api/og?path=shop"
    },
    {
      "source": "/collection/:type",
      "destination": "/api/og?path=collection/:type"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}